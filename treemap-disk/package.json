{
  "name": "@dkbike/treemap-disk",
  "version": "0.0.1",
  "dependencies": {
    "bcore": "0.0.18",
    "echarts": "^3.8.5",
    "jquery": "2.1.4",
    "lodash": "4.6.1"
  },
  "datav": {
    "cn_name": "硬盘空间树形图",
    "icon": "",
    "protocol": 2,
    "type": [
      "regular_map"
    ],
    "view": {
      "width": "800",
      "height": "600",
      "minWidth": "200",
      "minHeight": "100"
    },
    "apis": {
      "source": {
        "handler": "render",
        "description": "接口描述",
        "fields": {
          "value": {
            "description": "空间大小"
          },
          "name": {
            "description": "名称"
          },
          "path": {
            "description": "路径"
          },
          "children": {
            "description": "子项目"
          }
        }
      }
    },
    "config": {
      "title": {
        "name": "标题",
        "type": "group",
        "children": {
          "text": {
            "name": "文本",
            "type": "text",
            "default": "Disk Usage"
          },
          "left": {
            "name": "对齐方式",
            "type": "select",
            "options": [
              {
                "name": "左对齐",
                "value": "left"
              },
              {
                "name": "居中对齐",
                "value": "center"
              },
              {
                "name": "右对齐",
                "value": "right"
              }
            ],
            "default": "center"
          }
        }
      },
      "tooltip": {
        "name": "提示框",
        "type": "group",
        "children": {
          "show": {
            "name": "显示",
            "type": "boolean",
            "default": true
          },
          "padding": {
            "name": "内边距",
            "type": "number",
            "default": 10
          },
          "backgroundColor": {
            "name": "背景色",
            "type": "color",
            "default": "#222"
          },
          "borderColor": {
            "name": "边框色",
            "type": "color",
            "default": "#777"
          },
          "borderWidth": {
            "name": "边框宽度",
            "type": "number",
            "default": 1
          },
          "textStyle": {
            "name": "文字样式",
            "type": "group",
            "children": {
              "color": {
                "name": "颜色",
                "type": "color",
                "default": "#fff"
              }
            }
          }
        }
      },
      "levels": {
        "name": "多层配置",
        "type": "array",
        "default": [
          {
            "colorSaturation": {
              "min": 0.3,
              "max": 0.5
            },
            "itemStyle": {
              "normal": {
                "borderWidth": 0,
                "gapWidth": 5,
                "borderColorSaturation": 1
              }
            }
          },
          {
            "colorSaturation": {
              "min": 0.3,
              "max": 0.6
            },
            "itemStyle": {
              "normal": {
                "borderWidth": 0,
                "gapWidth": 1,
                "borderColorSaturation": 1
              }
            }
          },
          {
            "colorSaturation": {
              "min": 0.35,
              "max": 0.6
            },
            "itemStyle": {
              "normal": {
                "borderWidth": 0,
                "gapWidth": 1,
                "borderColorSaturation": 0.6
              }
            }
          }
        ],
        "child": {
          "type": "object",
          "name": "配置<%= i+1 %>",
          "child": {
            "colorSaturation": {
              "name": "节点颜色饱和度",
              "type": "group",
              "children": {
                "min": {
                  "name": "最小值",
                  "type": "number",
                  "default": 0,
                  "range": [
                    0,
                    1
                  ]
                },
                "max": {
                  "name": "最大值",
                  "type": "number",
                  "default": 0,
                  "range": [
                    0,
                    1
                  ]
                }
              }
            },
            "itemStyle": {
              "name": "图形样式",
              "type": "group",
              "children": {
                "normal": {
                  "name": "默认状态下的样式",
                  "type": "group",
                  "children": {
                    "borderWidth": {
                      "name": "边框宽度",
                      "type": "number",
                      "default": 0
                    },
                    "gapWidth": {
                      "name": "内部间距",
                      "type": "number",
                      "default": 0
                    },
                    "borderColorSaturation": {
                      "name": "边框颜色饱和度",
                      "type": "number",
                      "default": 0,
                      "range": [
                        0,
                        1
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "series": {
        "name": "系列",
        "type": "array",
        "default": [
          {
            "name": "Disk Usage",
            "type": "treemap",
            "visibleMin": 300,
            "label": {
              "show": true,
              "formatter": "{b}"
            },
            "itemStyle": {
              "normal": {
                "borderColor": "#fff"
              }
            }
          }
        ],
        "child": {
          "type": "object",
          "name": "系列<%= i+1 %>",
          "child": {
            "name": {
              "name": "系列名称",
              "type": "text",
              "default": ""
            },
            "label": {
              "name": "标签",
              "type": "group",
              "children": {
                "show": {
                  "name": "显示",
                  "type": "boolean",
                  "default": false
                },
                "formatter": {
                  "name": "内容格式器",
                  "type": "text",
                  "default": ""
                }
              }
            },
            "visibleMin": {
              "name": "显示面积",
              "type": "number",
              "default": 0
            },
            "itemStyle": {
              "name": "图形样式",
              "type": "group",
              "children": {
                "normal": {
                  "name": "默认状态下的样式",
                  "type": "group",
                  "children": {
                    "borderColor": {
                      "name": "边框颜色",
                      "type": "color",
                      "default": ""
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "api_data": {
      "source": "./data.json"
    }
  }
}
